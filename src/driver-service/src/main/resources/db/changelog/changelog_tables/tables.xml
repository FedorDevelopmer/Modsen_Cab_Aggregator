<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="basic_tables_setup" author="Fyodor">
        <createTable tableName="drivers">
            <column name="driver_id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="driver_name" type="varchar"/>
            <column name="driver_surname" type="varchar"/>
            <column name="driver_gender" type="varchar"/>
            <column name="driver_email" type="varchar"/>
            <column name="driver_birth_date" type="datetime"/>
            <column name="driver_phone" type="varchar"/>
            <column name="driver_remove_status" type="varchar"/>
        </createTable>

        <createTable tableName="cars">
            <column autoIncrement="true" name="car_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="car_driver" type="int"/>
            <column name="car_color" type="varchar"/>
            <column name="car_brand" type="varchar"/>
            <column name="car_reg_number" type="varchar"/>
            <column name="car_inspection_date" type="datetime"/>
            <column name="car_inspection_duration_month" type="int"/>
            <column name="car_remove_status" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet id="addition_of_driver_rating" author="Fyodor">
        <addColumn tableName="drivers">
            <column name="driver_rating" type="decimal(2,2)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
