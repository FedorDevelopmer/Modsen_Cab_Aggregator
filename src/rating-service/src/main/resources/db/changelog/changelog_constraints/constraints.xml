<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="basic_tables_setup" author="Fyodor">
        <!-- Rating Table -->
        <addNotNullConstraint tableName="rating_scores" columnName="rating_score_driver_id"/>
        <addNotNullConstraint tableName="rating_scores" columnName="rating_score_passenger_id"/>
        <addNotNullConstraint tableName="rating_scores" columnName="rating_score_evaluation"/>
        <addNotNullConstraint tableName="rating_scores" columnName="rating_score_initiator"/>
    </changeSet>
</databaseChangeLog>
