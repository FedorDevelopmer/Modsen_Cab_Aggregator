<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="basic_tables_setup" author="Fyodor">
        <createTable tableName="rating_scores">
            <column name="rating_score_id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rating_score_driver_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="rating_score_passenger_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="rating_score_evaluation" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="rating_score_comment" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="rating_score_initiator" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
