        <addNotNullConstraint tableName="rides" columnName="ride_status"/>
        <addNotNullConstraint tableName="rides" columnName="ride_order_time"/>
        <addNotNullConstraint tableName="rides" columnName="ride_price"/>
    </changeSet>

</databaseChangeLog>
