                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="basic_tables_setup" author="Fyodor">
        <!-- Rides Table -->
        <addNotNullConstraint tableName="rides" columnName="ride_driver_id"/>
        <addNotNullConstraint tableName="rides" columnName="ride_passenger_id"/>
        <addNotNullConstraint tableName="rides" columnName="ride_departure_address"/>
